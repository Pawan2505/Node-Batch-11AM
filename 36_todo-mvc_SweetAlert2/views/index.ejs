    <ul>
      <% todos.forEach(todo => { %>
        <li>
          <span><%= todo.task %></span>
          <form action="/delete/<%= todo._id %>" method="POST" style="display:inline;">
            <button type="submit" class="delete-btn">âŒ</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>

